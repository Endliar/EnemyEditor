<Window x:Class="EnemyEditor.AddEnemyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnemyEditor"
        mc:Ignorable="d"
        Title="AddEnemyDialog" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Name Label -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Name TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Icon Label -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Icon TextBlock -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Base Life Label -->
            <RowDefinition Height="Auto"/>
            <!-- 5: Base Life TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- 6: Life Modifier Label -->
            <RowDefinition Height="Auto"/>
            <!-- 7: Life Modifier TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- 8: Base Gold Label -->
            <RowDefinition Height="Auto"/>
            <!-- 9: Base Gold TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- 10: Gold Modifier Label -->
            <RowDefinition Height="Auto"/>
            <!-- 11: Gold Modifier TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- 12: Spawn Chance Label -->
            <RowDefinition Height="Auto"/>
            <!-- 13: Spawn Chance TextBox -->
            <RowDefinition Height="*"/>
            <!-- 14: Пустое пространство -->
            <RowDefinition Height="Auto"/>
            <!-- 15: Кнопки OK/Cancel -->
        </Grid.RowDefinitions>

        <!-- Name -->
        <TextBlock Text="Name:" Grid.Row="0"/>
        <TextBox x:Name="TxtName" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Selected Icon -->
        <TextBlock Text="Selected Icon:" Grid.Row="2"/>
        <TextBlock x:Name="TxtIcon" Grid.Row="3" Margin="0,0,0,10"/>

        <!-- Base Life -->
        <TextBlock Text="Base Life:" Grid.Row="4"/>
        <TextBox x:Name="TxtBaseLife" Grid.Row="5" Margin="0,0,0,10" Text="100"/>

        <!-- Life Modifier -->
        <TextBlock Text="Life Modifier:" Grid.Row="6"/>
        <TextBox x:Name="TxtLifeModifier" Grid.Row="7" Margin="0,0,0,10" Text="1.0"/>

        <!-- Base Gold -->
        <TextBlock Text="Base Gold:" Grid.Row="8"/>
        <TextBox x:Name="TxtBaseGold" Grid.Row="9" Margin="0,0,0,10" Text="10"/>

        <!-- Gold Modifier -->
        <TextBlock Text="Gold Modifier:" Grid.Row="10"/>
        <TextBox x:Name="TxtGoldModifier" Grid.Row="11" Margin="0,0,0,10" Text="1.0"/>

        <!-- Spawn Chance -->
        <TextBlock Text="Spawn Chance (0-1):" Grid.Row="12"/>
        <TextBox x:Name="TxtSpawnChance" Grid.Row="13" Margin="0,0,0,10" Text="0.5"/>

        <!-- Кнопки OK/Cancel -->
        <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="BtnOK_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="BtnCancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
