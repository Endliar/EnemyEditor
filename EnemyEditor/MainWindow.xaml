<Window x:Class="EnemyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnemyEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель инструментов -->
            <RowDefinition Height="*"/>
            <!-- Canvas с иконками -->
            <RowDefinition Height="Auto"/>
            <!-- Список врагов -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
        </Grid.RowDefinitions>

        <!-- Панель инструментов (кнопки Save/Load) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="BtnSave" Content="Save" Width="80" Margin="5" Click="BtnSave_Click"/>
            <Button x:Name="BtnLoad" Content="Load" Width="80" Margin="5" Click="BtnLoad_Click"/>
        </StackPanel>

        <!-- Canvas с иконками -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <ScrollViewer>
                <Canvas x:Name="IconsCanvas" Background="White" Width="600" Height="400">
                    <Border x:Name="SelectionBorder" Visibility="Collapsed"/>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- Список врагов с заголовком -->
        <GroupBox Grid.Row="2" Header="Enemy List" Margin="5">
            <ListBox x:Name="EnemyList" Height="150" ItemsSource="{Binding}"/>
        </GroupBox>

        <!-- Кнопки управления (Add/Remove) -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="BtnAdd" Content="Add Enemy" Width="100" Margin="5" Click="BtnAdd_Click"/>
            <Button x:Name="BtnRemove" Content="Remove Enemy" Width="100" Margin="5" Click="BtnRemove_Click"/>
        </StackPanel>
    </Grid>
</Window>
